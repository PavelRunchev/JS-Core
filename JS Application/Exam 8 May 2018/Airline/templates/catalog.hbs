<section id="viewCatalog" class="background-img">
    <a href="#/createFlight" class="add-flight">Add Flight +</a>

    <div class="added-flights">
        {{#each flights}}
            <a href="#/detailsFlight/{{_id}}" class="added-flight">
                <img src="{{image}}" alt="" class="picture-added-flight">
                <h3>{{destination}}</h3>
                <span>from {{origin}}</span><span> {{departure}}</span>
            </a>
        {{else}}
            <p>Not Flights!</p>
        {{/each}}

    </div>
</section>