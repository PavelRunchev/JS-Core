<section id="viewCart">
    <h1>My Cart</h1>
    <div class="products" id="cartProducts">
        <table>
            <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each cart}}
                <tr>
                    <td>{{product.name}}</td>
                    <td>{{product.description}}</td>
                    <td>{{quantity}}</td>
                    <td>{{product.price}}</td>
                    <td>
                        <button data-id="{{id}}">Discard</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>