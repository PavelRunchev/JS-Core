<section id="viewMyMessages">
    <h1>My Messages</h1>
    <div class="messages" id="myMessages">
        <table>
            <thead>
            <tr>
                <th>From</th>
                <th>Message</th>
                <th>Date Received</th>
            </tr>
            </thead>
            <tbody>
            {{#each messages}}
                <tr>
                    {{#if sender_name}}
                        <td>{{sender_name}} ({{sender_username}})</td>
                    {{else}}
                        <td>{{sender_username}}</td>
                    {{/if}}
                    <td>{{text}}</td>
                    <td>{{timestamp}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>